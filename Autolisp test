(vl-load-com)
(defun c:columnSizeChange (/ table rowCount colCount)
  ;; Select the table object
  (setq table (vlax-ename->vla-object (car (entsel "\nSelect a table: "))))

  ;; Change column widths
  (vla-setColumnWidth table 0 0.6415)
  (vla-setColumnWidth table 1 2.1142)
  (vla-setColumnWidth table 2 2.6856)
  (vla-setColumnWidth table 3 2.5281)
  (vla-setColumnWidth table 4 0.9262)
  (vla-setColumnWidth table 5 6.5582)

  ;; Get the number of rows and columns
  (setq rowCount (vla-get-Rows table))
  (setq colCount (vla-get-Columns table))

  ;; Change text height for the entire table
  (defun setTextHeight (table height)
    (repeat rowCount
      (setq row (1- rowCount))
      (repeat colCount
        (setq col (1- colCount))
        (vla-setTextHeight table row col height)
      )
    )
  )
  (setTextHeight table 0.125)

  ;; Align specified columns to middle center
  (defun alignColumn (table col alignment)
    (repeat rowCount
      (setq row (1- rowCount))
      (vla-setCellAlignment table row col alignment)
    )
  )
  (alignColumn table 0 acMiddleCenter)
  (alignColumn table 4 acMiddleCenter)

  (princ "\nColumn sizes, alignments, and text heights updated.")
  (princ)
)

(princ "\nType columnSizeChange to adjust the column sizes, alignments, and text heights of the selected table.\n")
