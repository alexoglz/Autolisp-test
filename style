(defun C:ChangeTextHeight ()
  (setq newTextHeight 0.1389) ;; Desired text height

  ;; Get the active document
  (setq doc (vla-get-ActiveDocument (vlax-get-Acad-Object)))

  ;; Loop through all entities in the active document
  (vlax-for entity (vla-get-ModelSpace doc)
    ;; Check if the entity is a table
    (if (eq (vla-get-ObjectName entity) "AcDbTable")
      (progn
        ;; Get the number of rows and columns in the table
        (setq numRows (vla-get-Rows entity))
        (setq numCols (vla-get-Columns entity))

        ;; Loop through each row in the table
        (setq row 0)
        (while (< row numRows)
          ;; Loop through each column in the current row
          (setq col 0)
          (while (< col numCols)
            ;; Set the text height for each cell in the row
            (vla-SetTextHeight entity row col newTextHeight)
            ;; Move to the next column
            (setq col (1+ col))
          )
          ;; Move to the next row
          (setq row (1+ row))
        )
      )
    )
  )
  (princ "\nText height changed to specified value for all rows in all tables.")
  (princ)
)

(princ "\nType 'ChangeTextHeight' to change the text height in all rows of all tables to 0.1389.\n")
(princ)

