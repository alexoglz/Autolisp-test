(defun C:SetRowsToData ()
  ;; Get the active document
  (setq doc (vla-get-ActiveDocument (vlax-get-Acad-Object)))

  ;; Loop through all entities in the active document
  (vlax-for entity (vla-get-ModelSpace doc)
    ;; Check if the entity is a table
    (if (eq (vla-get-ObjectName entity) "AcDbTable")
      (progn
        ;; Get the number of rows and columns in the table
        (setq numRows (vla-get-Rows entity))
        (setq numCols (vla-get-Columns entity))

        ;; Loop through each cell in the table
        (setq row 0)
        (while (< row numRows)
          (setq col 0)
          (while (< col numCols)
            ;; Set the cell content formatting to "Data"
            ;; Note: This step assumes "Data" uses the standard text style
            ;; You may need to adjust these settings based on your specific use case
            (vla-putTextStyle entity row col "Standard")
            ;; Reset other cell properties like alignment and color if needed
            (vla-putAlignment entity row col acMiddleCenter) ; Center alignment
            (vla-putTextHeight entity row col 0.18) ; Adjust text height
            ;; Add more properties as needed
            (setq col (1+ col))
          )
          (setq row (1+ row))
        )
      )
    )
  )
  (princ "\nAll table rows set to 'Data' style.")
  (princ)
)

(princ "\nType 'SetRowsToData' to set all table rows to the 'Data' style.\n")
(princ)


  ;; Print a message to confirm the operation
  (princ "\nAll rows in all tables have been set to the 'Data' style.")
  (princ)
)
